spring:
  datasource:
    driver-class-name: com.mysql.jdbc.Driver
    url: jdbc:mysql://${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}?useUnicode=true&characterEncoding=UTF8&useSSL=false
    username: ${MYSQL_USERNAME}
    password: ${MYSQL_PASSWORD}
  application:
    name: pikachu-article-dubbo-provider
  redis:
    host: ${REDIS_HOST}
    port: ${REDIS_PORT}
    password: ${REDIS_PASSWORD}

redisson:
  mode: single
  single:
    address: ${REDIS_HOST}:${REDIS_PORT}
    password: ${REDIS_PASSWORD}

dubbo:
  application:
    name: pikachu-article-dubbo-provider
  protocol:
    name: dubbo
    port: ${DUBBO_PORT}
  registry:
    address: nacos://${NACOS_HOST}:${NACOS_PORT}
  scan:
    basePackages: >
      com.huiaong.pikachu.*.service

mybatis:
  mapper-locations: classpath:mappers/*.xml
  type-aliases-package: >
    com.huiaong.pikachu.article.model
